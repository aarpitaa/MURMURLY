doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Microblogging Site
    link(rel="stylesheet" href="/css/main.css")
    script(src="/js/main.js")
  body
    header
      img(src="/images/logo.png" alt="Logo" class="logo")
    aside.slogan
      p Share the Buzz, Savor the Secrets, Celebrate the Stars on Murmurly.
    div.button-container
      a(href="/login" class="btn login-btn") Login
      a(href="/register" class="btn register-btn") Register
    div.login-form-container.hidden
      form.login-form
        h2 Please enter your username/email and password
        input(type="text" placeholder="username/email")
        input(type="password" placeholder="password")
        button(type="submit") Sign In
    footer
      p &copy; 2023 Microblogging Site
